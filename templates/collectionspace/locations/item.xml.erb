<?xml version="1.0" encoding="UTF-8"?>
<document name="locations">
  <ns2:locations_common xmlns:ns2="http://collectionspace.org/services/location" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <shortIdentifier><%= data[:shortidentifier] %></shortIdentifier>
    <address><%= data[:address] %></address>
    <locTermGroupList>
      <locTermGroup>
        <termPrefForLang>false</termPrefForLang>
        <termName><%= data[:termname] %></termName>
        <termDisplayName><%= data[:termname] %></termDisplayName>
        <termStatus>accepted</termStatus>
      </locTermGroup>
    </locTermGroupList>
    <accessNote><%= data[:accessnote] %></accessNote>
    <securityNote><%= data[:securitynote] %></securityNote>
<% if ! data[:locationtype].empty? %>
    <locationType>urn:cspace:<%= data[:domain] %>:vocabularies:name(locationtype):item:name(<%= data[:locationtype].downcase %>)'<%= data[:locationtype] %>'</locationType>
<% end %>
    <conditionGroupList>
      <conditionGroup>
        <conditionNote><%= data[:conditionnote] %></conditionNote>
        <conditionNoteDate/>
      </conditionGroup>
    </conditionGroupList>
  </ns2:locations_common>
</document>